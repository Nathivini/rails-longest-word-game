<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="What is the longest word you can find?">
  <input type="submit" value="Play" class="btn btn-default">
</form>
